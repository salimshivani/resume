    <ImageView android:id="@+id/ivGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true" />

    <TextView android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/ivGet"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/ivGet" />
    <!--android:autoText="false"-->

    <TextView android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@+id/ivGet"
        android:textAlignment="center" />

    <TextView android:id="@+id/tvContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmail"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@+id/ivGet"
        android:textAlignment="center" />

    <TextView android:id="@+id/tvSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContact"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@+id/ivGet"
        android:textAlignment="center" />

    <TextView android:id="@+id/tvDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSkills"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@+id/ivGet"
        android:textAlignment="center" />

